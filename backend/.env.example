# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/coinestate_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coinestate_db
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@coinestate.io

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Contract Addresses
VBK_CONTRACT_ADDRESS=
PROPERTY_NFT_CONTRACT_ADDRESS=

# Private Keys (for contract interactions)
OWNER_PRIVATE_KEY=your_owner_private_key_here
OPERATOR_PRIVATE_KEY=your_operator_private_key_here

# IPFS Configuration
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# External APIs
ETHERSCAN_API_KEY=your_etherscan_api_key
COINGECKO_API_KEY=your_coingecko_api_key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info

# Cron Jobs
ENABLE_CRON_JOBS=true
INCOME_DISTRIBUTION_CRON=0 0 1 * *
PROPERTY_UPDATE_CRON=0 */6 * * *

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring
SENTRY_DSN=

# AWS (if using AWS services)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
AWS_S3_BUCKET=coinestate-assets

# Social Media
DISCORD_WEBHOOK_URL=
TWITTER_API_KEY=
TELEGRAM_BOT_TOKEN=
