{
  "name": "coinestate-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for CoinEstate platform with upgradeable architecture",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:upgradeable": "hardhat test test/CoinEstateUpgradeable.test.ts",
    "coverage": "hardhat coverage",
    "deploy:localhost": "hardhat run scripts/deploy-upgradeable.js --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy-upgradeable.js --network goerli",
    "deploy:mainnet": "hardhat run scripts/deploy-upgradeable.js --network mainnet",
    "upgrade:localhost": "VBK_PROXY_ADDRESS=<PROXY_ADDRESS> hardhat run scripts/upgrade-vaultbrick.js --network localhost",
    "upgrade:goerli": "VBK_PROXY_ADDRESS=<PROXY_ADDRESS> hardhat run scripts/upgrade-vaultbrick.js --network goerli",
    "upgrade:mainnet": "VBK_PROXY_ADDRESS=<PROXY_ADDRESS> hardhat run scripts/upgrade-vaultbrick.js --network mainnet",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:mainnet": "hardhat verify --network mainnet",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "gas": "hardhat test --network hardhat --gas-reporter",
    "validate:upgrades": "hardhat run scripts/validate-upgrades.js",
    "docs": "hardhat docgen"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-docgen": "^1.3.0",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "dotenv": "^16.0.0"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "real-estate",
    "nft",
    "defi",
    "upgradeable",
    "proxy"
  ],
  "author": "CoinEstate Team",
  "license": "MIT"
}
